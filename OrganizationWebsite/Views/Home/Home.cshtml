@{
    ViewData["Title"] = "Home Page";
}
<style>
    body {
        display: flex;
        flex-direction: column;
        min-height: 270vh;
    }

    .carousel-inner {
        max-height: 700px; 
    }

    .carousel-item img {
        max-height: 700px; 
        object-fit: cover; 
        width: 100%;
    }

    .custom-button {
        background-color: #007bff; 
        color: #fff; 
        padding: 10px 20px; 
        border-radius: 25px; 
        text-decoration: none; 
    }

        .custom-button:hover {
            background-color: #0056b3;
        }

</style>

<div class="mt-5  text-center" style="margin-top: 300px;min-height: 25vh;">
    <img class="img-fluid" src="~/images/snowpark-footer-logo.png" alt="Image" title="image" />
</div>


<div class="text-center mt-5" style="margin-top: 300px; min-height: 50vh;">
    <h1 style="letter-spacing: 2px;" class="display-4 fw-lighter">Scope India is open 365 days a year</h1>
    <h2 style="letter-spacing: 2px;" class="mt-3 fw-lighter">Let's discuss your career, 24/7 free consultation</h2>
    <a class="btn custom-button mt-3" asp-action="Contact" asp-controller="Home">Contact us <i class="fas fa-arrow-right"></i></a>
</div>


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-3 mb-4">
            <div class="text-center">
                <img class="img-fluid" src="~/images/snowpark-home-icon1.png" alt="Image" title="image"/>
                <h1 class="mt-3">Training</h1>
                <p>
                    You are trained under Suffix E Solutions working professionals, on-the-job training model.
                </p>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-3 mb-4">
            <div class="text-center">
                <img class="img-fluid" src="~/images/snowpark-home-icon2.png" alt="Image" title="image" />
                <h1 class="mt-3">Internship</h1>
                <p>After course completion, you will be proceeded to live projects with a 6 months experience certificate.</p>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-3 mb-4">
            <div class="text-center">
                <img class="img-fluid" src="~/images/snowpark-home-icon3.png" alt="Image" title="image" />
                <h1 class="mt-3">Grooming</h1>
                <p>CV Preparation, Interview Preparation, and Personality Development.</p>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-3 mb-4">
            <div class="text-center">
                <img class="img-fluid" src="~/images/snowpark-home-icon4.png" alt="Image" title="image" />
                <h1 class="mt-3">Placement</h1>
                <p>Gives 100% FREE placement support to all our fellow techies through SCOPE INDIA's Placement Cell.</p>
            </div>
        </div>
    </div>
</div>

<div id="carouselExampleIndicators" class="carousel slide mt-5" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Images/scope-india-aws-certification-course-(1).jpg" class="d-block w-100" alt="First slide title=" image"">
        </div>
        <div class="carousel-item">
            <img src="~/Images/scope-india-dotnet-core-full-stack-course.jpg" class="d-block w-100" alt="Second slide title=" image"">
        </div>
        <div class="carousel-item">
            <img src="~/Images/Screenshot 2023-10-06 221028.png" class="d-block w-100" alt="Third slide" title="image">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>



