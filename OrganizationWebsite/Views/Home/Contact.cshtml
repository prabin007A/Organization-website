<!DOCTYPE html>
    <html>
    <head>
        <title>
        @{
            ViewData["Title"] = "Contact Us";
        }
    </title>
    <link href="~/css/contact.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 240vh;
        }

    </style>
    </head>

    <body>
    @{
        var message = TempData["message"] as string;
        var isError = TempData["isError"] as bool?;
    }

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert @(isError == true ? "alert-danger" : "alert-info") alert-dismissible fade show mt-4" role="alert">
            @message 
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="container">

            <div class="container mt-5">
            <h2 style="letter-spacing:5px">Get in Touch...!</h2>

            <h5 style ="letter-spacing:2px" class="mt-3 fw-lighter">
                We'd love to hear from you! Whether you have questions, feedback, or need support, our team is here to help. Reach out to us anytime, and we'll get back to you as soon as possible.
                Follow us on social media for the latest updates, tips, and exclusive offers. We're just a click away!
            </h5>
            </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 mb-4">
                <div style="border-radius: 40px;" class="contact-us card-header w-75">
                    <div class="title">
                        <h1 class="text-secondary">Contact us</h1>
                    </div>
                    <div class="form">
                        <form asp-action="Contact" asp-controller="Home" method="post">
                            <div class="form-items">
                                <input type="text" name="Name" class="input" placeholder="Username" required />
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="form-items">
                                <input type="email" name="Email" class="input" placeholder="Email" required />
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div class="form-items">
                                <textarea class="input message" name="Message" cols="30" rows="10" placeholder="Message...." required></textarea>
                            </div>
                            <button class="btn but" type="submit">Submit <i class="fas fa-arrow-right"></i></button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 mb-4">
                <div style="border-radius: 40px;" class="contact-us card-header w-75">
                    <div class="title">
                        <h3 class="text-secondary text-center">Nagercoil, Tamil Nadu</h3>
                    </div>
                    <div class="mt-5">
                        <h5><a href="#" class="nav nav-link text-black"><i class="fas fa-map-marker-alt"></i> SCOPE INDIA, Near WCC College, Palace Rd, Nagercoil, Tamil Nadu 629001</a></h5>
                        <h5 class="mt-4"><a href="tel:8075536185" class="nav nav-link text-black"><i class="fas fa-phone"></i> 8075536185</a></h5>
                        <h5 class="mt-4"><a href="mailto:ngl@scopeindia.org" class="nav nav-link text-black"><i class="fas fa-envelope"></i> ngl@scopeindia.org</a></h5>
                        <h5 class="mt-4"><a href="https://scopeindia.org/contact-scope-india" class="nav nav-link text-black" target="_blank"><i class="fas fa-globe"></i> Visit Our Website</a></h5>
                        <h5 class="mt-4"><a href="https://maps.app.goo.gl/xjoK4DvUfqfRQH3H8" class="nav nav-link text-black" target="_blank"><i class="fas fa-map-marker-alt"></i> Our Location</a></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>
</body>
    </html>